{% extends '::menu.html.twig' %}

{% block body -%}
    <h1>Cycling history</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Origin</th>
                <th>Arrival</th>
                <th>Duration</th>
                <th>Kilometers</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ruta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.stationOrigin.name }}</td>
                <td>{{ entity.stationArrival.name }}</td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.kilometers }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ruta_show', { 'id': entity.id }) }}">show</a>
                    </li>

                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
    </ul>
    {% endblock %}
